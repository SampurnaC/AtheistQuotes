<div class="col-sm-6">
  <div class=" text-center">
    <% @quotes = Quote.where(id: rand(7..1800))%>
    <div class="special text-center">
      <% @quote = "#{Quote.where(:id => rand(7..1800)).first.the_quote}".html_safe %>

      <% @newquote = @quote.split %>
        <% if @newquote.last.include? '-' %>
          <% @newquote[@newquote.count - 1] = @newquote[@newquote.count - 1].gsub('-', "<br><br>-") %>
        <% elsif @newquote[@newquote.count - 2].include? '-'%>
          <% @newquote[@newquote.count - 2] = @newquote[@newquote.count - 2].gsub('-', "<br><br>-") %>
        <% else %>
          <% @newquote[@newquote.count - 3] = @newquote[@newquote.count - 3].gsub('-', "<br><br>-") %>
        <% end %>
     <%= @newquote.join(' ').html_safe %>
    </div>
      <div class="pull-left"><%= link_to 'Add Quote', addquote_index_path, class: 'btn btn-danger', style: 'margin-top: 10%;' %></div>
      <div class="pull-right"><%= link_to 'Next Quote', root_path, class: 'btn btn-success', style: 'margin-top: 10%;' %></div>
  </div>
</div>
